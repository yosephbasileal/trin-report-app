<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_followup_chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trinreport.m.app.followup.FollowupChatActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_chat"
        android:layout_width="match_parent"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        android:layout_height="56dp"
        android:background="@drawable/border_bottom"
        app:theme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentTop="true">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_refresh_black_24dp"
            android:layout_gravity="right"
            android:id="@+id/refresh_chat"
            android:scaleType="fitCenter"
            android:padding="10dp"
            />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/form"
        android:background="@drawable/border"
        android:paddingRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:paddingBottom="3dp"
        android:weightSum="3"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/msg"
            android:background="@android:color/transparent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:hint="Enter a message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:maxLength="240"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <ImageButton
                android:id="@+id/send"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="Send"
                android:src="@drawable/ic_send_black_24dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                />
        </FrameLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/msgview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@null"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"
        android:layout_above="@id/form"
        android:layout_below="@id/toolbar_chat">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/chat_text_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:background="@null"
        android:transcriptMode="alwaysScroll"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="25sp">
    </TextView>

    <LinearLayout
        android:id="@+id/chat_notice_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_below="@+id/chat_text_notice"
        android:visibility="gone">

        <Button
            android:id="@+id/button_retry"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            android:text="Retry"
            />
        <Button
            android:id="@+id/button_view"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text="View" />

    </LinearLayout>

</RelativeLayout>
