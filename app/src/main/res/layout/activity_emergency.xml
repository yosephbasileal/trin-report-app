<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_emergency"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="com.trinreport.m.app.emergency.Emergency"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_emergency"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorActionBar"
            app:theme="@style/ThemeOverlay.AppCompat.Light"
            android:layout_alignParentTop="true">
        </android.support.v7.widget.Toolbar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="16dp"
            android:id="@+id/status"
            android:text="Status:"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:id="@+id/statusTextView"
            android:text="Not Received"
            android:textColor="#ff0000"
            android:textSize="50sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="16dp"
            android:text="Explanation:"
            android:textSize="30dp"/>

        <LinearLayout
            android:id="@+id/explanation_layout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp">
            <EditText
                android:id="@+id/explanation"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"/>
            <Button
                android:id="@+id/send_explanation"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Send"/>
        </LinearLayout>

        <TextView
            android:id="@+id/explanation_sent_textview"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="16dp"
            android:text="Options:"
            android:textSize="30sp"/>

        <CheckBox
            android:id="@+id/callme_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Campus Safety can call me"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="16dp"
            android:text="Actions:"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/call_csafety_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:text="Call Campus Safety"/>

    </LinearLayout>
</LinearLayout>
