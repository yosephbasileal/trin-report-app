<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trinreport.m.app.emergency.EmergencyTabFragment">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/trin5_blur"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/cuved_bg"
        android:layout_margin="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">
        </LinearLayout>
        <Button
            android:layout_weight="6"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Emergency?\nTap and hold"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="32sp"
            android:id="@+id/button_emergency"
            android:background="@drawable/round_button"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="You will be notified when help is on the way."
            android:textSize="30sp"
            android:textAlignment="center"
            android:paddingTop="48dp"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_weight="4"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>
</RelativeLayout>
