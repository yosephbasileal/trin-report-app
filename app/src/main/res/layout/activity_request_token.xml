<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trinreport.m.app.authentication.RequestTokenActivity"
    android:id="@+id/request_token_activity"
    android:orientation="vertical"
    android:gravity="center">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_request"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        app:theme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentTop="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:gravity="center">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="16dp"
                android:src="@drawable/trin_logo"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Provide your trincoll.edu address"
                android:textSize="24sp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You will receive a verification code."
                android:id="@+id/text2"
                android:layout_marginTop="8dp"
                android:textSize="18sp"/>
            <android.support.v7.widget.AppCompatEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="12"
                android:id="@+id/email_address"
                android:layout_marginTop= "20dp"
                app:backgroundTint="@color/colorAccent"
                android:textAlignment="center"
                android:focusable="true"
                android:hint="Enter you @trincoll.edu email"/>
            <TextView
                android:id="@+id/error_request"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="@android:color/holo_red_light"
                android:layout_marginTop="8dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <Button
                    android:background="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GET CODE"
                    android:textStyle="bold"
                    android:id="@+id/get_token_button"
                    android:layout_centerInParent="true" />
                <ProgressBar
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:indeterminate="true"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/marker_progress_request"
                    style="?android:attr/progressBarStyle"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_toRightOf="@id/get_token_button"
                    android:visibility="invisible"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
