<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trinreport.m.app.report.ReportTabFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/trin5_blur"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/cuved_bg"
        android:layout_margin="16dp">

        <LinearLayout
            android:id="@+id/top_padding"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttons_relative"
            android:orientation="vertical"
            android:layout_below="@+id/top_padding">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TAP TO CALL"
                android:textStyle="bold"
                android:textSize="14pt"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="12dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <Button
                        android:background="@color/colorPrimary"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:id="@+id/call_campus_safety"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:adjustViewBounds="true"
                        android:clickable="true"

                        android:layout_margin="10dp"
                        android:text="Campus Safety">
                    </Button>

                    <Button
                        android:id="@+id/call_health_center"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:adjustViewBounds="true"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:layout_margin="10dp"
                        android:text="Health  Center">
                    </Button>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <Button
                        android:id="@+id/call_counselling_center"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:adjustViewBounds="true"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:layout_margin="10dp"
                        android:text="Counselling Center">
                    </Button>

                    <Button
                        android:id="@+id/call_title_9"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:adjustViewBounds="true"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:layout_margin="10dp"
                        android:text="Title IX      Office"

                        >
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/or_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttons_relative"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="OR"
            android:textStyle="bold"
            android:textSize="14pt"
            android:textColor="@color/colorPrimaryDark"/>


        <Button
            android:id="@+id/add_report_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:text="Submit a Report"
            android:layout_below="@+id/or_textview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:background="@color/colorAccent"
            android:padding="10dp"
            />
    </LinearLayout>



</RelativeLayout>
